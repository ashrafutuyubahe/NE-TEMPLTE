{
  "base_url": "http://localhost:3000",
  "endpoints": [
    {
      "name": "Health Check",
      "method": "GET",
      "url": "/health",
      "headers": {},
      "body": null
    },
    {
      "name": "Register User",
      "method": "POST",
      "url": "/api/auth/register",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "email": "user@example.com",
        "password": "password123",
        "firstName": "John",
        "lastName": "Doe"
      }
    },
    {
      "name": "Login User",
      "method": "POST",
      "url": "/api/auth/login",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "email": "user@example.com",
        "password": "password123"
      }
    },
    {
      "name": "Login Admin",
      "method": "POST",
      "url": "/api/auth/login",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "email": "admin@library.com",
        "password": "admin123"
      }
    },
    {
      "name": "Get All Books",
      "method": "GET",
      "url": "/api/books",
      "headers": {
        "Authorization": "Bearer YOUR_USER_TOKEN_HERE"
      },
      "body": null,
      "query_params": {
        "search": "gatsby",
        "author": "F. Scott Fitzgerald",
        "category": "Fiction"
      },
      "note": "Query params are optional. Use any combination or none."
    },
    {
      "name": "Get Book by ID",
      "method": "GET",
      "url": "/api/books/:id",
      "headers": {
        "Authorization": "Bearer YOUR_USER_TOKEN_HERE"
      },
      "body": null,
      "example_url": "/api/books/123e4567-e89b-12d3-a456-426614174000"
    },
    {
      "name": "Create Book (Admin)",
      "method": "POST",
      "url": "/api/books",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE",
        "Content-Type": "application/json"
      },
      "body": {
        "title": "The Great Gatsby",
        "author": "F. Scott Fitzgerald",
        "isbn": "978-0-7432-7356-5",
        "description": "A classic American novel set in the Jazz Age, following the mysterious millionaire Jay Gatsby and his obsession with Daisy Buchanan.",
        "totalCopies": 10,
        "category": "Fiction",
        "publisher": "Scribner",
        "publicationYear": 1925
      }
    },
    {
      "name": "Create Book - Minimal (Admin)",
      "method": "POST",
      "url": "/api/books",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE",
        "Content-Type": "application/json"
      },
      "body": {
        "title": "To Kill a Mockingbird",
        "author": "Harper Lee",
        "isbn": "978-0-06-112008-4",
        "totalCopies": 5
      }
    },
    {
      "name": "Update Book (Admin)",
      "method": "PUT",
      "url": "/api/books/:id",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE",
        "Content-Type": "application/json"
      },
      "body": {
        "title": "The Great Gatsby (Updated)",
        "totalCopies": 15,
        "description": "Updated description"
      },
      "example_url": "/api/books/123e4567-e89b-12d3-a456-426614174000"
    },
    {
      "name": "Delete Book (Admin)",
      "method": "DELETE",
      "url": "/api/books/:id",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE"
      },
      "body": null,
      "example_url": "/api/books/123e4567-e89b-12d3-a456-426614174000"
    },
    {
      "name": "Create Borrow Request",
      "method": "POST",
      "url": "/api/borrow",
      "headers": {
        "Authorization": "Bearer YOUR_USER_TOKEN_HERE",
        "Content-Type": "application/json"
      },
      "body": {
        "bookId": "123e4567-e89b-12d3-a456-426614174000",
        "borrowDurationDays": 7
      }
    },
    {
      "name": "Create Borrow Request - Default Duration",
      "method": "POST",
      "url": "/api/borrow",
      "headers": {
        "Authorization": "Bearer YOUR_USER_TOKEN_HERE",
        "Content-Type": "application/json"
      },
      "body": {
        "bookId": "123e4567-e89b-12d3-a456-426614174000"
      },
      "note": "borrowDurationDays defaults to 7 if not provided"
    },
    {
      "name": "Get My Borrow Requests",
      "method": "GET",
      "url": "/api/borrow/my-requests",
      "headers": {
        "Authorization": "Bearer YOUR_USER_TOKEN_HERE"
      },
      "body": null
    },
    {
      "name": "Get My Borrow History",
      "method": "GET",
      "url": "/api/borrow/my-history",
      "headers": {
        "Authorization": "Bearer YOUR_USER_TOKEN_HERE"
      },
      "body": null
    },
    {
      "name": "Get Single Borrow Request by ID",
      "method": "GET",
      "url": "/api/borrow/:id",
      "headers": {
        "Authorization": "Bearer YOUR_USER_TOKEN_HERE"
      },
      "body": null,
      "example_url": "/api/borrow/123e4567-e89b-12d3-a456-426614174000",
      "note": "Users can only view their own requests. Admins can view any request."
    },
    {
      "name": "Get All Borrow Requests (Admin)",
      "method": "GET",
      "url": "/api/borrow",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE"
      },
      "body": null,
      "query_params": {
        "status": "pending"
      },
      "note": "Query param 'status' is optional. Values: pending, approved, rejected, returned"
    },
    {
      "name": "Approve Borrow Request (Admin)",
      "method": "PUT",
      "url": "/api/borrow/:id",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE",
        "Content-Type": "application/json"
      },
      "body": {
        "status": "approved"
      },
      "example_url": "/api/borrow/123e4567-e89b-12d3-a456-426614174000"
    },
    {
      "name": "Reject Borrow Request (Admin)",
      "method": "PUT",
      "url": "/api/borrow/:id",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE",
        "Content-Type": "application/json"
      },
      "body": {
        "status": "rejected",
        "rejectionReason": "Book is currently unavailable"
      },
      "example_url": "/api/borrow/123e4567-e89b-12d3-a456-426614174000"
    },
    {
      "name": "Mark as Returned (Admin)",
      "method": "PUT",
      "url": "/api/borrow/:id",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE",
        "Content-Type": "application/json"
      },
      "body": {
        "status": "returned"
      },
      "example_url": "/api/borrow/123e4567-e89b-12d3-a456-426614174000"
    },
    {
      "name": "Get Current User Profile",
      "method": "GET",
      "url": "/api/users/me",
      "headers": {
        "Authorization": "Bearer YOUR_USER_TOKEN_HERE"
      },
      "body": null
    },
    {
      "name": "Get All Users (Admin)",
      "method": "GET",
      "url": "/api/users",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE"
      },
      "body": null,
      "query_params": {
        "role": "user",
        "isActive": "true"
      },
      "note": "Query params are optional. role: user/admin, isActive: true/false"
    },
    {
      "name": "Get User by ID (Admin)",
      "method": "GET",
      "url": "/api/users/:id",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE"
      },
      "body": null,
      "example_url": "/api/users/123e4567-e89b-12d3-a456-426614174000"
    },
    {
      "name": "Update User (Admin)",
      "method": "PUT",
      "url": "/api/users/:id",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE",
        "Content-Type": "application/json"
      },
      "body": {
        "firstName": "Jane",
        "lastName": "Smith",
        "role": "admin",
        "isActive": true
      },
      "example_url": "/api/users/123e4567-e89b-12d3-a456-426614174000"
    },
    {
      "name": "Deactivate User (Admin)",
      "method": "PUT",
      "url": "/api/users/:id",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE",
        "Content-Type": "application/json"
      },
      "body": {
        "isActive": false
      },
      "example_url": "/api/users/123e4567-e89b-12d3-a456-426614174000"
    },
    {
      "name": "Delete User (Admin)",
      "method": "DELETE",
      "url": "/api/users/:id",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE"
      },
      "body": null,
      "example_url": "/api/users/123e4567-e89b-12d3-a456-426614174000"
    }
  ],
  "instructions": {
    "step1": "Replace YOUR_USER_TOKEN_HERE with actual token from login response",
    "step2": "Replace YOUR_ADMIN_TOKEN_HERE with actual token from admin login",
    "step3": "Replace :id in URLs with actual UUIDs from previous responses",
    "step4": "For GET requests with query params, add them to URL like: /api/books?search=gatsby&category=Fiction",
    "step5": "All endpoints except /health, /api/auth/register, and /api/auth/login require Authorization header"
  }
}

